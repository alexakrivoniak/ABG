<section class="greenBlocks {% if section.float_green_boxes %}u-bgWhite greenBlocks--float{% else %} u-bgGreen {% endif %}">
	<div class="container">
		<div class="row u-bgGreen">
			{% for item in section.green_blocks %}
				<div class="{% if loop.length == 3 %} col-md-4 col-sm-12 {% elseif loop.length == 2 %} col-md-6 col-sm-6 {% else %} col greenBlock--1 {% endif %} greenBlock">
					{% if item.enter_custom_content %}
						<h3 class="u-textWhite">
							{% if item.green_block_title %} 
								{{ item.green_block_title }}  
							{% endif %}
						</h3>
					{% else %}
						<h3 class="u-textWhite">{{  TimberPost( item.green_block_page[0] ).title  }}</h3>
					{% endif %}

					<div class="u-largeP">
						{% if item.enter_custom_content %} {{ item.green_block_description  }} {% else %} {{  TimberPost( item.green_block_page[0] ).get_field('page_description')  }}  {% endif %}
					</div>
					
					{% if item.enter_custom_content %}
						{% if item.green_block_button_text %}
							<a href="{{ item.green_block_button_link }}" class="btn btn--white">{{ item.green_block_button_text }}</a>
						{% endif %}
					{% else %}
							{% if item.green_block_button_text %}
								<a href="{{  TimberPost( item.green_block_page[0]).link  }}" class="btn btn--white">
									{{ item.green_block_button_text }}
								</a>
							{% else %}
								<a href="{{  TimberPost( item.green_block_page[0]).link  }}" class="btn btn--white">
									Learn More
								</a>
							{% endif %}
						</a>
					{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
</section>