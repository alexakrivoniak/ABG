<section class="instaSection js-home-section js-section-blur u-bgImage" data-section-img="{{ Image(section.background_image).src }}">
	<div class="instaSection-wrapper u-vh100 u-relative">
		<div class="instaSection-bg u-bgImage u-absolute100" style="background-image:url({{ Image(section.background_image).src }});">
		</div>
		<div class="container u-relative">
			<div class="row homeSection-wrapper u-vh100 u-relative">
				<div class="instaSection-blurBox u-blur-parent">
					<div class="u-blur-black"></div>
					<div class="u-blur js-section-blur-item"></div>
					<div class="home-blurBox-content u-blur-content">
						<h2 class="u-textWhite u-textShadow">{{ section.box_headline }}</h2>
						<p class="u-textWhite">{{ section.box_description }}</p>
						{% if section.box_button_text %}
							<a href="{{ section.box_button_link }}" class="btn">{{ section.box_button_text }}</a>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
		<div class="instaSection-blocks">
			{% filter shortcodes %}
				[instagram-feed type="user" includewords="#abghomepage"]
			{% endfilter %}
		</div>
	</div>
</section>